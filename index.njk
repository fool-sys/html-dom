{% set chunkSize = (collections.posts.length / products.length) | round %}
{% set chunkPosts = collections.posts | chunk(chunkSize) %}
{% for posts in chunkPosts %}
    {% set product = products[loop.index - 1] %}
    {% for post in posts | reverse %}
    <div class="home__post">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
    </div>
    {% endfor %}

    <div class="home__product" style="background-color: {{ product.themeColor }}">
        <a href="{{ product.url }}" style="color: #FFF" alt="{{ product.description }}">
            <img height="64" width="64" src="/assets/{{ product.name | slug }}.png" alt="{{ product.description }}" />
            <h3 class="home__heading">{{ product.name }}</h3>
            {{ product.description }}
        </a>
    </div>
{% endfor %}
</div>