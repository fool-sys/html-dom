        {% set chunkSize = (collections.posts.length / products.length) | round %}
        {% set chunkPosts = collections.posts | chunk(chunkSize) %}
        {% for posts in chunkPosts %}        
        {% set product = products[(loop.index - 1)] %}
        <div class="grid">
            {% for post in posts %}
            <div class="grid__item home-example">
                <div class="home-example__inner">
                    <div class="home-example__category home-example__category--{{ post.data.category | lower }}">{{ post.data.category }}</div>
                    <h2 class="home-example__link"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
                </div>
            </div>
            {% endfor %}

            {% if product.name %}
            <div class="grid__item home-example">
                <div class="home-product home-example__inner" style="background-color: {{ product.themeColor }}">
                    <a class="home-product__link" href="{{ product.url }}" style="color: #FFF" alt="{{ product.description }}">
                        <div class="home-product__head">
                            <img height="48" width="48" src="/assets/{{ product.name | slug }}.png" alt="{{ product.description }}" />
                            <h3 class="home-product__name">{{ product.name }}</h3>
                        </div>
                        <div class="home-product__desc">{{ product.description }}</div>
                    </a>
                </div>
            </div>
            {% endif %}
        </div>
